<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    style="@style/both_match_style"
    android:orientation="vertical"
    tools:context=".module.ui.activitys.MainActivity">
    <LinearLayout
        android:paddingTop="18dp"
        style="@style/both_hmatch_style"
        android:background="@color/colorWrite"
        android:orientation="horizontal">

        <ImageView
            android:padding="2dp"
            android:id="@+id/add_channel_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:maxHeight="?attr/actionBarSize"
            android:src="@mipmap/nav_search_normal"
            android:layout_marginLeft="5dp"
            />
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/magicIndicator"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            app:tl_divider_color="#1A000000"
            app:tl_divider_padding="13dp"
            app:tl_divider_width="1dp"
            app:tl_indicator_color="#000000"
            app:tl_indicator_height="1.5dp"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_padding="22dp"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="#000000"
            app:tl_textUnselectColor="#66000000"
            app:tl_underline_color="#1A000000"
            app:tl_underline_height="1dp" />

        <ImageView
            android:id="@+id/add_channel_iv"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:maxHeight="?attr/actionBarSize"
            android:src="@mipmap/nav_add_normal"
            />
    </LinearLayout>

    <View
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/indetack"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </android.support.v4.view.ViewPager>

</LinearLayout>
